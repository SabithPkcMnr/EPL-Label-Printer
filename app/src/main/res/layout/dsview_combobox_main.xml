<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFE4EF"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/comboEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/comboButton"
        android:layout_alignBottom="@+id/comboButton"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/comboButton"
        android:background="@null"
        android:inputType="text"
        android:textColor="#444444"/>

    <Button
        android:id="@+id/comboButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_dropdown"/>

</RelativeLayout>